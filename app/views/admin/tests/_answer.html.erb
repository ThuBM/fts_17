<div class="answer_sheets">
  <p><%= f.options[:child_index]+1 %>.&nbsp
    <%= f.hidden_field :question_id, value: f.object.question.id %>
    <%= f.object.question.content %>
  </p>
  <% if f.object.question.options.count == 0 %>
    <%= f.text_area :content, class: 'col-sm-12', rows: '4', disabled: @test.completed? %>
  <% end %>
  <% f.object.question.options.each do |option| %>
    <div class="col-md-12" style="<%= get_option_style(f.object, option, @test) %>">
      <%= f.radio_button :option_id, option.id, disabled: true %>
      <%= option.content %>
    </div>
  <% end %>
  <div class="col-md-12">
    <%= f.check_box :correct, class: 'col-md-2' %>
    <div class="col-md-10">Answer is correct ?</div>
  </div>
</div>
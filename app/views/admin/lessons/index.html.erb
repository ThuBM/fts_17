<% provide(:title, 'All lessons') %>
<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center"><strong>All lessons</strong></h2>
      <hr>
      <%= link_to "Add new lesson", new_admin_lesson_path, class: "edit-btn btn btn-primary col-md-4 col-md-offset-4" %>
    </div>
    <ul>
      <div class="col-md-offset-9"><%= will_paginate %></div>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Time per test (minutes)</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @lessons.each do |lesson| %>
            <%= render lesson %>
          <% end %>
        </tbody>
      </table>
      <div class="col-md-offset-9"><%= will_paginate %></div>
    </ul>
  </div>
</div>

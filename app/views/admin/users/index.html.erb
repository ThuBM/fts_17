<% provide(:title, 'All users') %>
<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center"><strong>All users</strong></h2>
      <hr>
      <div>
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>" style="text-align: center;">
            <%= message %>
          <% end %></div>
      </div>
      <ul class="col-lg-12">
        <div class="col-md-offset-9"><%= will_paginate %></div>
        <% @users.each do |user| %>
          <%= render user %>
        <% end %>
        <div class="col-md-offset-9"><%= will_paginate %></div>
      </ul>
    </div>
  </div>
</div>
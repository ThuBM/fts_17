<% provide(:title, 'Do test') %>
<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <div class="col-md-6 col-md-offset-1 test_user_name">
        <%= @test.created_at %><br />
        Example result: 
      </div>
      <div id='countdown' class="col-md-6 test_time_count_down"></div>
    </div>
    <div class="col-md-12 test_lesson_name">
      <hr>
      <h2><%= @test.lesson.name %></h2>
    </div>
    <div class="col-md-12">
    </div>
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@test) do |f| %>
        <%= f.hidden_field :status, value: "Submitted", id: "status" %>
        <%= f.hidden_field :user_id, value: @test.user.id %>
        <%= f.hidden_field :lesson_id, value: @test.lesson.id %>
        <%= f.fields_for :answers do |builder| %>
          <%= render 'answer', f: builder %>
        <% end %>
        <%= f.submit "Submit", class: 'btn btn-primary col-md-12', disabled: @test.completed?, id: "submit-button" %>
      <% end %>
    </div>
  </div>
</div>

<script>
  var seconds = <%= @count_down_time %>;
  secondPassed();
  var countdownTimer = setInterval(function(){
    secondPassed();
  }, 1000, false);
  clearIntervals(countdownTimer);
</script>
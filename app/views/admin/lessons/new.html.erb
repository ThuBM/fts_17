<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center"><strong>Create new lesson</strong></h2>
      <hr>
      <div class="col-md-6 col-md-offset-3">
        <%= form_for [:admin, @lesson] do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name %>

          <%= f.label :time %>
          <%= f.number_field :time %>

          <%= f.submit "Create", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>